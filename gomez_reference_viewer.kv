<Popup>:
    title: "Agregar"
    content: files

    BoxLayout:
        orientation: "vertical"
        id: files

        BoxLayout:
            orientation: "vertical"
            size_hint_y: .07

            Button:
                text:"Aceptar"
                on_press: root.aceptar_pressed(args)

        BoxLayout:
            orientation: "vertical"


            FileChooserIconView:
                id: chooser                
                multiselect: False
                on_submit: root.add_reference(*args)


<Root_widget>:
    orientation: "vertical"
    padding: 5
    view: view

    BoxLayout:
        orientation: "vertical"
        size_hint_y:.07

        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 0.5
            
            Button:
                text: "Agregar Imagen"
                id: agregar                
                on_press: root.agregar()
        
            Button:
                text: "Cropear"
                id: cropear
                on_press: root.set_cropear(*args)

            Button:
                text: "Mover"
                id: mover
                on_press: root.set_mover(*args)

    BoxLayout:
        orientation: "vertical"

        Viewer:
            id:view
            canvas.before:
                Color:
                    rgba: .2,.2,.2,1
                Rectangle:
                    pos: self.pos
                    size: root.size
