<Popup>:
    title: "Agregar"
    content: files

    BoxLayout:
        orientation: "vertical"
        id: files

        BoxLayout:
            orientation: "vertical"
            size_hint_y: .07

            Button:
                text:"Aceptar"
                on_press: root.aceptar_pressed(args)

        BoxLayout:
            orientation: "vertical"


            FileChooserIconView:
                id: chooser                
                multiselect: False
                on_submit: root.add_reference(*args)


<Root_widget>:
    orientation: "vertical"
    padding: 5

    BoxLayout:
        orientation: "vertical"
        size_hint_y:.07

        Button:
            text: "Agregar Imagen"
            on_press: root.agregar()

    BoxLayout:
        orientation: "vertical"

        Viewer:
            id:view
            canvas.before:
                Color:
                    rgba: .2,.2,.2,1
                Rectangle:
                    pos: self.pos
                    size: root.size
