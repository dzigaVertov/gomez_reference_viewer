<Popup>:
	title: "Agregar"
	id: pop
	content: files

	FileChooserIconView:
		id: files
		multiselect: True		
		on_selection: root.eve(args)
		
<Root_widget>:
	orientation: "vertical"
	id: roo 
	padding: 5
	

	BoxLayout:
		orientation: "vertical"
		size_hint_y:.07
		

		Button:
			text: "Agregar Imagen"
			on_press: root.agregar()

	BoxLayout:
		orientation: "vertical"
		

		Viewer:
			id:vwr

			canvas.before:
				Color:
					rgba: 1,1,1,1
				Rectangle:
					pos: self.pos
					size: root.size
			

			
				
		